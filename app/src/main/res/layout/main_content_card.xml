<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_marginHorizontal="3dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/contentImageLayout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/contentImageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="contentImage"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contentDataLayout"
            android:layout_width="210dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/contentLocationTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Location"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/contentNameTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Name"/>

            <TextView
                android:id="@+id/contentPriceTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Price"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/contentRatingTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Rating"
                android:layout_marginVertical="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/buyItemButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="12sp"
                android:text="Buy"/>

            <Button
                android:id="@+id/wishlistItemButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/baseline_star_outline_24" />

            <Button
                android:id="@+id/deleteItemButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/baseline_delete_24" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>